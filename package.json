{
  "name": "copy-url-of-all-tabs",
  "description": "Cross-browser extension supporting both Chrome and Firefox.",
  "version": "1.16.0",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/from-es/copy-url-of-all-tabs.git"
  },
  "bugs": {
    "url": "https://github.com/from-es/copy-url-of-all-tabs/issues"
  },
  "homepage": "https://github.com/from-es/copy-url-of-all-tabs",
  "scripts": {
    "dev:chrome"        : "wxt --browser chrome --mv3",
    "dev:firefox"       : "wxt --browser firefox --mv3",
    "build:chrome:prod" : "wxt build --browser chrome --mv3",
    "build:chrome:dev"  : "wxt build --browser chrome --mv3 --mode sourcemap",
    "build:firefox:prod": "wxt build --browser firefox --mv3",
    "build:firefox:dev" : "wxt build --browser firefox --mv3 --mode sourcemap",
    "zip:chrome"        : "wxt zip --browser chrome --mv3",
    "zip:firefox"       : "wxt zip --browser firefox --mv3",

    "check" : "svelte-check --tsconfig ./tsconfig.json",
    "eslint": "eslint src",

    "vitest"         : "vitest",
    "vitest:run"     : "vitest run",
    "vitest:ui"      : "vitest --ui",
    "vitest:coverage": "vitest run --coverage",
    "vitest:smoke"   : "vitest run ./tests/_vitest-check/",

    "postinstall": "wxt prepare",
    "prepare"    : "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/svelte": "^5.2.10",
    "@tsconfig/svelte": "^5.0.6",
    "@types/lodash-es": "^4.17.12",
    "@types/sortablejs": "^1.15.9",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@wxt-dev/module-svelte": "^2.0.4",
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.5",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16",
    "wxt": "^0.20.13"
  },
  "dependencies": {
    "bowser": "^2.13.1",
    "dayjs": "^1.11.19",
    "dompurify": "^3.3.1",
    "lodash-es": "^4.17.22",
    "marked": "^17.0.1",
    "modern-normalize": "^3.0.1",
    "p-queue": "^9.0.1",
    "sortablejs": "^1.15.6",
    "v8n": "^1.5.1"
  }
}
